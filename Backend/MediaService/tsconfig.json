{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@entities/*": ["src/entities/*"],
      "@gateways/*": ["src/gateways/*"],
      "@usecases/*": ["src/usecases/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
